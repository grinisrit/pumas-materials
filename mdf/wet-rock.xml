<!-- Description of a wet Standard Rock, i.e. a mesoscopic composite with a
     water fraction.
  -->
<pumas>
        <!-- List of atomic elements. -->
        <element name="Hydrogen" Z="1" A="1.00795" I="21.8"/>
        <element name="Oxygen" Z="8" A="15.9994" I="95.0"/>
        <element name="StandardRock" Z="11" A="22.0" I="136.4"/>

        <!-- Liquid water. -->
        <material name="Water" file="water.txt">
                <component name="Hydrogen" fraction="0.111894"/>
                <component name="Oxygen" fraction="0.888106"/>
        </material>

        <!-- Standard Rock. -->
        <material name="StandardRock" file="standard-rock.txt">
                <component name="StandardRock" fraction="1.0"/>
        </material>

        <!-- Mesoscopic composite of Standard Rock and water. -->
        <composite name="WetRock">
                <component name="StandardRock" fraction="0.5" density="2.65"/>
                <component name="Water" fraction="0.5" density="1.00"/>
        </composite>
</pumas>
